def stock_picker(array)
    stocks = array.first(2)
    result =[array.length,0]
    array.each_index do |index| 
      if result[1]<index && array[index]>stocks[1] 
        stocks[1] = array[index]
        result[1] = index
      end
      if result[0]>index && array[index]<stocks[0]
        stocks[0] = array[index]
        result[0] = index
      end
      
    end
    result
  
  end

p stock_picker([17,3,6,9,15,8,6,1,10])
#  => [1,4]   for a profit of $15 - $3 == $12